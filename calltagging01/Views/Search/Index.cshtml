<!-- Table Section -->
<div class="container p-6 mt-5">
    <div class="row justify-content-center">
        <table class="table table-bordered">
            <thead>
                <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AgentPhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ConnectionType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Problems)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OccurredAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IssueType)
                                </th>
                </tr>
            </thead>
            <tbody>
                            @{
                                int i = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AgentPhone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ConnectionType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Problems)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OccurredAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IssueType)
                                    </td>
                                </tr>
                                i++;
                            }
            </tbody>
        </table>
    </div>
</div>

