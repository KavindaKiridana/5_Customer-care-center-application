@*                     <div class="align-middle fw-bold fs-4 text-black">Connection Type:</div>
 *@                    <div class="d-flex flex-wrap">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input ms-5" type="radio" id="inlineCheckbox1" name="ConnectionType" value="Fiber">
                            <label class="form-check-label ms-2" for="inlineCheckbox1">Fiber</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input ms-5" type="radio" id="inlineCheckbox2" name="ConnectionType" value="4G LTE Postpaid">
                            <label class="form-check-label ms-2" for="inlineCheckbox2">4G LTE Postpaid</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input ms-5" type="radio" id="inlineCheckbox3" name="ConnectionType" value="4G LTE Prepaid">
                            <label class="form-check-label ms-2" for="inlineCheckbox3">4G LTE Prepaid</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input ms-5" type="radio" id="inlineCheckbox4" name="ConnectionType" value="Mega/Copper">
                            <label class="form-check-label ms-2" for="inlineCheckbox4">Mega/Copper</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input ms-5" type="radio" id="inlineCheckbox5" name="ConnectionType" value="ALL">
                            <label class="form-check-label ms-2" for="inlineCheckbox5">All</label>
                        </div>
                    </div>
                </div>

                <!-- Category Section -->
                <div class="d-flex justify-content-center  cust_margin">
                    <div class="col-12  rounded-3 shadow  bg-blue2 h6">
                        <div class="d-flex flex-wrap justify-content-center">
                            <div class="form-check form-check-inline mx-4">
                                <input class="form-check-input ms-3" type="radio" name="Category" id="inlineRadio1" value="Broadband">
                                <label class="form-check-label ms-2" for="inlineRadio1">Broadband</label>
                            </div>
                            <div class="form-check form-check-inline mx-4">
                                <input class="form-check-input ms-3" type="radio" name="Category" id="inlineRadio2" value="Peo tv">
                                <label class="form-check-label ms-2" for="inlineRadio2">Peo tv</label>
                            </div>
                            <div class="form-check form-check-inline mx-4">
                                <input class="form-check-input ms-3" type="radio" name="Category" id="inlineRadio3" value="Voice">
                                <label class="form-check-label ms-2" for="inlineRadio3">Voice</label>
                            </div>
                            <div class="form-check form-check-inline mx-4">
                                <input class="form-check-input ms-3" type="radio" name="Category" id="inlineRadio4" value="Billing">
                                <label class="form-check-label ms-2" for="inlineRadio4">Billing</label>
                            </div>
                            <div class="form-check form-check-inline mx-4">
