                <!-- Report Date Section -->
                <div class="container">
                    <div class="card custom-card">
                        <div class="card-body text-center rounded-3">
                            <h4 class="card-title text-light">Report Date</h4>
                            <div class="row d-flex justify-content-center align-items-center">
                                <div class="col-md-4">
                                    <label for="fromDate" class="me-2">From</label>
                                    <input type="date" name="fromDate" class="form-control custom-input" id="fromDate">
                                </div>
                                <div class="col-md-4">
                                    <label for="toDate" class="me-2">To</label>
