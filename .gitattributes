###############################################################################
# Set default behavior to automatically normalize line endings.
###############################################################################
* text=auto

###############################################################################
# Language detection settings - Add these to fix language detection
###############################################################################
*.cs linguist-language=C#
*.cshtml linguist-language=C#
*.csx linguist-language=C#
*.sln linguist-language=C#
*.csproj linguist-language=C#

# Exclude web files from language statistics
*.html linguist-detectable=false
*.htm linguist-detectable=false
*.js linguist-detectable=false
*.css linguist-detectable=false

###############################################################################
# Set default behavior for command prompt diff.
###############################################################################
*.cs     diff=csharp

###############################################################################
# Set the merge driver for project and solution files
###############################################################################
*.sln       merge=binary
*.csproj    merge=binary
*.vbproj    merge=binary
*.vcxproj   merge=binary
*.vcproj    merge=binary
*.dbproj    merge=binary
*.fsproj    merge=binary
*.lsproj    merge=binary
*.wixproj   merge=binary
*.modelproj merge=binary
*.sqlproj   merge=binary
*.wwaproj   merge=binary

###############################################################################
# behavior for image files
###############################################################################
*.jpg   binary
*.png   binary
*.gif   binary

###############################################################################
# diff behavior for common document formats
###############################################################################
*.doc   diff=astextplain
*.DOC   diff=astextplain
*.docx  diff=astextplain
*.DOCX  diff=astextplain
*.dot   diff=astextplain
*.DOT   diff=astextplain
*.pdf   diff=astextplain
*.PDF   diff=astextplain
*.rtf   diff=astextplain
*.RTF   diff=astextplain